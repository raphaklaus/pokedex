html, body
    width 100%
    height 100%

.background
    background-color #EFFFDE
    height 100%
    width 100%

.wide-screen-mode
    display flex
    flex-direction column
    justify-content space-between
    width inherit
    height inherit
    .wide-block
        background-color #183442
        width 100%
        height 25%

.game-container
    display flex
    justify-content space-around
    align-items flex-end
    width inherit
    height inherit

